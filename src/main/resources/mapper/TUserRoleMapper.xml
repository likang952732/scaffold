<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wwinfo.mapper.TUserRoleMapper">

    <insert id="addBatch" parameterType="list">
        INSERT INTO t_user_role
        (user_id, role_id)
        VALUES
        <foreach collection ="userRoleList" item="item" index= "index" separator =",">
            (
            #{item.userId},
            #{item.roleId}
            )
        </foreach >
    </insert>

    <delete id="deleteByUserId" parameterType="list">
        DELETE FROM t_user_role WHERE user_id = #{userId}
    </delete>

    <select id="getRoleByUserId" resultType="com.wwinfo.model.TRole" parameterType="java.lang.Long">
       select
          r.id,
          r.name
       from t_user_role tur
       join t_role r on tur.role_id = r.id
       where tur.user_id = #{userId}
    </select>
</mapper>
